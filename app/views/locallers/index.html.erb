<div class="bg-index">
  <div class="pages">
    <div class="container pb-3">
      <h2><i class="fa-solid fa-arrows-rotate"></i> Locallers around</h2>

      <div class="carousel">
        <div class="card-carousel-container">
          <% @activities.each do |activity| %>
            <div class="card-carousel"><%= link_to activity.title, locallers_path(filter: activity.title, query: params[:query]), class: "my-button" %></div>
          <% end %>
        </div>
      </div>

      <div style="width: 100%; height: 300px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div>
        <% @locallers.each do |localler| %>
          <%= link_to localler_path(localler) do %>
            <div class="card-locallers">
              <h3><%= localler.user.username %> - <%= localler.location %></h3>
              <p> <%= localler.user.bio %> </p>
              <% localler.activities.each do |activity| %>
                <p class="my-button"><%= activity.title %></p>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
