<div>
  <div>
    <img src="" alt="">
    <h2><%= @localler.user.username %></h2>
    <p><%= @localler.location %></p>
  </div>
  <div>
    <h2>About me</h2>
    <p><%= @localler.description %></p>
  </div>
  <hr>
  <div>
    <h2>Activities I like</h2>
    <div>
      <ul>
        <% @localler.activities.each do |activity| %>
          <li><%= activity.title %></li>
        <% end %>
      </ul>
    </div>

    <% if Chat.where(localler: @localler, user: current_user).any? %>
      <%= link_to "Let's chat!", chat_path(Chat.find_by(localler: @localler, user: current_user)), class: "btn btn-dark" %>
    <% else %>
      <%= link_to "Let's chat!", chats_path(localler: @localler), data: {turbo_method: :post}, class: "btn btn-dark" %>
    <% end %>
  </div>


  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
  <a href=""></a>
</div>
