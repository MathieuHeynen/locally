<div class="messages-index">

  <div class="container">
  <h2 class="pb-4">My Messages</h2>

    <% @chats.each do |chat| %>

      <div class="card card-chats w-75">
      <div class="card-body">
        <div class="card-title">
        <%= chat.localler.user.username %>
        </div>
        <%= link_to "Open chat", chat_path(chat), class:"my-button" %>
      </div>
      </div>

    <% end %>
  </div>

</div>
