<div class="bg-index">
  <div class="pages">
    <div class="messages-index">
      <div class="container">

        <h2><i class="fa-solid fa-envelope"></i> My Chats</h2>
        <% if @chats.any? %>
          <% @chats.each do |chat| %>
            <div class="card card-chats">
              <div class="card-body">
                <div class="card-title">
                  <% if current_user != chat.localler.user %>
                    <h4 class="fw-bold ps-1 pb-1"><%= chat.localler.user.username %></h4>
                  <% else %>
                    <h4 class="fw-bold ps-1 pb-1"><%= chat.user.username %></h4>
                  <% end %>
                </div>

            <% if chat.meetings.any? %>
              <div class="meeting-notice">
                <% if current_user == chat.user %>
                  <p>You're meeting with <%= chat.localler.user.username %> on <%= chat.meetings.last.time.strftime("%A, %d %b %Y %l:%M %p") %> in <%= chat.meetings.last.location %></p>
                <% else %>
                  <p>You're meeting with <%= chat.user.username %> on <%= chat.meetings.last.time.strftime("%A, %d %b %Y %l:%M %p") %> in <%= chat.meetings.last.location %></p>
                <% end %>
              </div>
            <% end %>

                <div class="text-center">
                  <%= link_to "Open chat", chat_path(chat), class:"green-button-chat w-100 mb-2" %>
                  <% if current_user == chat.user %>
                    <%= link_to "See Profile", localler_path(chat.localler), class:"black-button-chat w-100" %>
                  <% else %>
                    <%= link_to "See Profile", profile_path(chat.user), class:"black-button-chat w-100" %>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="pt-4 text-center">You currently have no open chats...</p>
          <div style="width:100%;height:0;padding-bottom:56%;position:relative;"><iframe src="https://giphy.com/embed/jc2PkKKr3clTBekMzn" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div><p><a href="https://giphy.com/gifs/hero0fwar-sad-pablo-escobar-jc2PkKKr3clTBekMzn"></a></p>
        <% end %>

      </div>
    </div>
  </div>
</div>
